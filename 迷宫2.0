#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
int main () {
    int wry = 4;
    while(wry--) {
        printf("\n                    %d", wry);
        sleep(1);
        system("clear");
    }
    printf("\033[1;32m");
    printf("\n             Ready go!\n");
    char a[50][50]={"|----------------------------|",
                    "|O         |   --   | ||| ||||",
                    "| |---|| | | |    | | ||| ||||",
                    "| |   || ||  | --|| | |||   ||",
                    "|   | ||  --|    |  |  || ||||",
                    "|---| |     | ----- |-    ||||",
                    "|   | |--|| |   |   | | |    |",
                    "| | |    || | ---- -| | | ---|",
                    "| | | ||      ||      | | ---|",
                    "| | | ||---|- || |||||- |   -|",
                    "| |   ||   | || -||||| -|-   |",
                    "| |---|| | |-||-  |        | |",
                    "|        | |     |-||| ||| |  ",
                    "| ----|-|| ||||| | ||| ||| | |",
                    "|     | || ||||| |||       |-|",
                    "|---- | || |      |------| | |",
                    "|     | || |- |||        |   |",
                    "| | --|       |||-| ----|--  |",
                    "| |    || ||      |          |",
                    "------------------------------",
};
int i,x,y,p,q;
char ch;

x=1; y=1; p=12; q=29;
for(i=0;i<20;i++)
    puts(a[i]);

while(x!=p || y!=q)
{
    ch=getchar();

    if(ch=='s')
    {
        if(a[x+1][y]!='-' && a[x+1][y]!='|')
        {
            a[x][y]=' ';   
            x++;
            a[x][y]='O';
        }
    }
    if(ch=='w')
    {
        if(a[x-1][y]!='-' && a[x-1][y]!='|')
        {
            a[x][y]=' ';
            x--;
            a[x][y]='O';
        }
    }

    if(ch=='a')
    {
        if(a[x][y-1]!='#' && a[x][y-1]!='|')
        {
            a[x][y]=' ';
            y--;
            a[x][y]='O';
        }
    }

    if(ch=='d')
    {
        if(a[x][y+1]!='-' && a[x][y+1]!='|')
        {
            a[x][y]=' ';
            y++;
            a[x][y]='O';
        }
    }
    system("clear");
    for(i=0;i<20;i++)
        puts(a[i]);
}
    printf("You win!\n");
	return 0;
}
